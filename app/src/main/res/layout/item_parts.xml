<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_light">

    <TextView
        android:id="@+id/textTitleDescriptionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imagePart"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textTitleDescriptionName"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wallpaper_black_48dp" />


    <TextView
        android:id="@+id/textCategory"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:textColor="@color/primaryDarkColor" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="60dp"
        android:gravity="right"
        android:textColor="@color/primaryDarkColor" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="90dp"
        android:gravity="right"
        android:textColor="@color/primaryDarkColor" />


    <!--        <LinearLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPriceAmountValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textPriceCurrencyValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>-->


</RelativeLayout>